citHeader("To cite mefa in publications use:")

## R >= 2.8.0 passes package metadata to citation().
if (!exists("meta") || is.null(meta)) meta <- packageDescription("mefa")
year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

citEntry(entry="Manual",
         title = "{mefa}: Multivariate Data Handling in Ecology and Biogeography",
         author = person(last = "S\\'{o}lymos", first = "P\\'{e}ter", email = "solymos@ualberta.ca"),
         organization = "Alberta Biodiversity Monitoring Institute",
         address = "Edmonton, Alberta, Canada",
         year = year,
         note = note,
         url = "http://mefa.r-forge.r-project.org/",

         textVersion =
         paste("Solymos, Peter",
           sprintf("(%s).", year),   
               "mefa: Multivariate Data Handling in Ecology and Biogeography.",
               "Alberta Biodiversity Monitoring Institute.",
               "Edmonton, Alberta, Canada.",
           paste(note, ".", sep = ""),
               "URL http://mefa.r-forge.r-project.org/.")
         )

citEntry(entry="Article",
         title = "Processing Ecological Data in {R} with the {mefa} Package",
         author = person(last = "S\\'{o}lymos", first = "P\\'{e}ter", email = "solymos@ualberta.ca"),
         journal      = "Journal of Statistical Software",
         year         = "2008",
         volume       = "XX",
         number       = "XX",
         url          = "http://www.jstatsoft.org/XXX",
         
         textVersion = 
         paste("Solymos, Peter (2008).", 
               "Processing Ecological Data in R with the mefa Package.",
               "Journal of Statistical Software XX(XX).",
               "URL http://www.jstatsoft.org/XXX.")
        )

